<!DOCTYPE html>
<html lang="en">

<head>
  <title>Register</title>

  <!-- Shared Libraries -->
  <%- include("partials/head"); %>

    <!-- External JS libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.8-beta.17/jquery.inputmask.min.js"
      integrity="sha512-zdfH1XdRONkxXKLQxCI2Ak3c9wNymTiPh5cU4OsUavFDATDbUzLR+SYWWz0RkhDmBDT0gNSUe4xrQXx8D89JIQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Internal JS libraries -->
    <script type="text/javascript" src="/scripts/register.js"></script>

    <!-- Internal CSS -->
    <link href="styles/register.css" rel="stylesheet">
</head>

<body>

  <main>
    <a href="/">
      <img src="assets/logo.png">
    </a>
    <div class="register-box border border-1 rounded">
      <form id="register-form" class="needs-validation" method="POST" novalidate>
        <label class="form-label border-bottom">Register</label>
        <div class="mb-3">
          <label for="fullNameInput" class="form-label">Your name (First & Last name)</label>
          <input type="text" class="form-control" name="fullName" id="fullNameInput" value="" required>
          <div class="invalid-feedback">
            Please enter your name
          </div>
        </div>
        <div class="mb-3">
          <label for="emailInput" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" id="emailInput" value="" required>
          <div class="invalid-feedback">
            Please enter your email
          </div>
        </div>
        <div class="mb-3">
          <label for="mobileNumberInput" class="form-label">Mobile Number</label>
          <input type="tel" class="form-control" name="phone" id="mobileNumberInput" value=""
            pattern="\([0-9]{3}\) [0-9]{3}-[0-9]{4}" required>
          <div class="invalid-feedback">
            Please correct your phone input
          </div>
        </div>
        <div class="mb-3">
          <label for="passwordInput" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="passwordInput" value="" required>
          <div class="invalid-feedback">
            Please enter a password
          </div>
        </div>
        <div class="mb-3">
          <label for="confirmPasswordInput" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPasswordInput" value="" required>
          <div class="invalid-feedback">
            Please enter the same password as above
          </div>
        </div>
        <span id="register-error" class="mb-3"></span>
        <button type="submit" class="btn btn-primary">Register</button>
        <a href="/login">Already have an account? Login here</a>
      </form>
    </div>
  </main>

</body>

</html>
